// AI Calendar Agent - Database Schema
// Sprint 1: Foundation Models (User, Workspace, Account, Session)

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ============= WORKSPACE & MULTI-TENANCY =============

enum WorkspaceType {
  PERSONAL
  TEAM
  ENTERPRISE
}

model Workspace {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  type          WorkspaceType @default(PERSONAL)

  // Billing
  plan          String   @default("free") // free | pro | enterprise
  stripeCustomerId String? @unique
  stripeSubscriptionId String? @unique

  // Settings
  settings      Json     @default("{}")

  // Relations
  users         User[]
  tasks         Task[]
  calendars     Calendar[]
  schedules     Schedule[]
  integrations  Integration[]
  bookings      Booking[]
  auditLogs     AuditLog[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([slug])
  @@map("workspaces")
}

// ============= AUTHENTICATION (NextAuth.js) =============

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider (hashed)

  // User preferences
  timezone      String    @default("UTC")
  workHoursStart Int      @default(9)  // 9 AM
  workHoursEnd   Int      @default(17) // 5 PM
  workDays      String[]  @default(["Mon", "Tue", "Wed", "Thu", "Fri"])
  breakDuration Int       @default(15) // minutes

  // Multi-tenancy
  workspaceId   String

  // Relations
  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  accounts      Account[]
  sessions      Session[]
  tasks         Task[]
  calendars     Calendar[]
  schedules     Schedule[]
  notifications Notification[]
  focusSessions FocusSession[]
  auditLogs     AuditLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([workspaceId])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============= CALENDARS =============

model Calendar {
  id              String   @id @default(cuid())
  workspaceId     String
  userId          String
  provider        String   // "google" | "microsoft"
  externalId      String   // Calendar ID from provider
  name            String
  color           String?
  isPrimary       Boolean  @default(false)
  isActive        Boolean  @default(true)

  // Sync metadata
  lastSyncAt      DateTime?
  syncToken       String?  @db.Text

  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  events          CalendarEvent[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, provider, externalId])
  @@index([workspaceId])
  @@index([userId])
  @@map("calendars")
}

model CalendarEvent {
  id              String   @id @default(cuid())
  calendarId      String
  externalId      String   // Event ID from provider

  title           String
  description     String?  @db.Text
  location        String?

  startTime       DateTime
  endTime         DateTime
  isAllDay        Boolean  @default(false)

  recurrence      String?  // RRULE format
  status          String   @default("confirmed") // confirmed | tentative | cancelled

  calendar        Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([calendarId, externalId])
  @@index([calendarId])
  @@index([startTime, endTime])
  @@map("calendar_events")
}

// ============= TASKS =============

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum EnergyLevel {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id              String   @id @default(cuid())
  workspaceId     String
  userId          String

  title           String
  description     String?  @db.Text

  estimatedMinutes Int     // User's estimate
  actualMinutes    Int?    // Tracked after completion

  priority        Priority @default(MEDIUM)
  status          TaskStatus @default(TODO)

  deadline        DateTime?
  tags            String[]

  // AI scheduling metadata
  flexibilityScore Float?  // 0-1, how flexible this task is
  energyLevel     EnergyLevel? // LOW | MEDIUM | HIGH

  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scheduleSlot    ScheduleSlot?

  completedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([workspaceId])
  @@index([userId, status])
  @@index([userId, deadline])
  @@map("tasks")
}

// ============= AI SCHEDULING =============

enum ScheduleStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

model Schedule {
  id              String   @id @default(cuid())
  workspaceId     String
  userId          String

  startDate       DateTime
  endDate         DateTime

  status          ScheduleStatus @default(ACTIVE)

  // AI metadata
  aiVersion       String   // Track which AI model/version created this
  confidence      Float    // 0-1, AI confidence in this schedule

  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  slots           ScheduleSlot[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([workspaceId])
  @@index([userId, status])
  @@map("schedules")
}

model ScheduleSlot {
  id              String   @id @default(cuid())
  scheduleId      String
  taskId          String   @unique

  startTime       DateTime
  endTime         DateTime

  // AI reasoning (for transparency)
  reasoning       String?  @db.Text

  schedule        Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  task            Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([scheduleId])
  @@index([startTime, endTime])
  @@map("schedule_slots")
}

// ============= INTEGRATIONS =============

enum IntegrationType {
  TASK_MANAGEMENT
  COMMUNICATION
  NOTE_TAKING
  TIME_TRACKING
}

model Integration {
  id              String   @id @default(cuid())
  workspaceId     String
  userId          String
  type            IntegrationType
  provider        String   // "todoist" | "asana" | "slack" | "notion" etc.

  // OAuth tokens
  accessToken     String?  @db.Text
  refreshToken    String?  @db.Text
  expiresAt       DateTime?

  // Integration-specific config
  config          Json     @default("{}")

  isActive        Boolean  @default(true)
  lastSyncAt      DateTime?
  syncStatus      String?  // "syncing" | "success" | "error"
  syncError       String?  @db.Text

  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([workspaceId, provider])
  @@index([workspaceId])
  @@index([userId])
  @@map("integrations")
}

// ============= NOTIFICATIONS =============

enum NotificationType {
  SYNC_COMPLETE
  SYNC_ERROR
  SCHEDULE_READY
  TASK_DUE_SOON
  MEETING_STARTING
  SYSTEM
}

model Notification {
  id              String   @id @default(cuid())
  userId          String
  type            NotificationType
  title           String
  message         String   @db.Text
  link            String?

  isRead          Boolean  @default(false)
  readAt          DateTime?

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("notifications")
}

// ============= FOCUS & PRODUCTIVITY =============

enum FocusStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}

model FocusSession {
  id              String   @id @default(cuid())
  userId          String
  taskId          String?

  startTime       DateTime
  endTime         DateTime?
  targetDuration  Int      // minutes

  status          FocusStatus @default(IN_PROGRESS)
  completionRate  Float?   // 0-1, percentage of target completed

  // Settings
  blockDistractions Boolean @default(true)
  soundscape      String?  // ambient sound type

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([startTime, endTime])
  @@map("focus_sessions")
}

// ============= TEAM COORDINATION =============

enum BookingStatus {
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Booking {
  id              String   @id @default(cuid())
  workspaceId     String
  hostUserId      String

  // Booking page config
  slug            String   @unique
  title           String
  description     String?  @db.Text
  duration        Int      // minutes

  // Availability
  availableDays   String[]
  availableHours  Json     // { "Mon": ["09:00-17:00"], ... }

  // Buffer times
  bufferBefore    Int      @default(0)  // minutes
  bufferAfter     Int      @default(0)

  isActive        Boolean  @default(true)

  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  bookingSlots    BookingSlot[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([workspaceId])
  @@index([slug])
  @@map("bookings")
}

model BookingSlot {
  id              String   @id @default(cuid())
  bookingId       String

  guestName       String
  guestEmail      String

  startTime       DateTime
  endTime         DateTime

  status          BookingStatus @default(CONFIRMED)
  cancelReason    String?  @db.Text

  // Link to calendar event
  calendarEventId String?

  booking         Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([bookingId])
  @@index([startTime, endTime])
  @@index([guestEmail])
  @@map("booking_slots")
}

// ============= ADMIN & AUDIT =============

model AuditLog {
  id              String   @id @default(cuid())
  workspaceId     String
  userId          String

  action          String   // "user.created" | "task.deleted" | "calendar.synced"
  resource        String   // "User" | "Task" | "Calendar"
  resourceId      String

  changes         Json?    // Before/after values
  ipAddress       String?
  userAgent       String?  @db.Text

  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())

  @@index([workspaceId])
  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}
